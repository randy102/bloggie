@page
@model Bloggie.Pages.ChangePasswordModel

@{
  ViewData["Title"] = "Change Password";
}
<div class="container">
  <h2>Change password</h2>
  <form method="POST" onsubmit="return checkPw(this)" class="needs-validation" novalidate>
    <div class="form-group">
      <label>Old password:</label>
      <input asp-for="@Model.OldPassword" type="password" class="form-control" placeholder="Password..."
style="border-radius: 10px;" required>
      <div class="invalid-feedback">Password can not be blank!</div>
    </div>
    <div class="form-group">
      <label>New password:</label>
      <input id="pw1" type="password" class="form-control" placeholder="Password..." style="border-radius: 10px;"
      required>
      <div class="invalid-feedback">Password can not be blank!</div>
    </div>
    <div class="form-group">
      <label>Confirm new password:</label>
      <input id="pw2" asp-for="@Model.Password" type="password" class="form-control" placeholder="Password..."
style="border-radius: 10px;" required>
      <div class="invalid-feedback">Password can not be blank!</div>
    </div>

    @if (@Model.ErrorMessage != null)
    {
      <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px;">
        <strong>Error:</strong> @Model.ErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
    }

    <div class="form-group">
      <button class="btn btn-primary" style="width: 130px; border-radius: 16px;">Save changes</button>
    </div>
  </form>
  <script src="~/js/Validation.js"></script>
</div>

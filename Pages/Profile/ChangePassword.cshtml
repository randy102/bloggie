@page
@model Bloggie.Pages.ChangePasswordModel

@{
  ViewData["Title"] = "Change Password";
}
@section Scripts {
     <script src="~/js/Validation.js"></script>
}
<div class="row no-gutters justify-content-center align-self-center m-auto">
  <div style="width: 500px">

    <div class="display-4 text-center">
      Change password
    </div> 

    <hr class="my-4">

    <form method="POST" onsubmit="return checkPw(this)" class="needs-validation" novalidate>

      <div class="form-group">
        <label>Old password:</label>
        <input asp-for="@Model.OldPassword" type="password" class="form-control" placeholder="Password..."
    style="border-radius: 10px;" required>
        <div class="invalid-feedback">Password is required.</div>
      </div>

      <div class="form-group">
        <label>New password:</label>
        <input id="pw1" type="password" class="form-control" placeholder="Password..." style="border-radius: 10px;"
        required>
        <div class="invalid-feedback">Password is required.</div>
      </div>

      <div class="form-group">
        <label>Confirm new password:</label>
        <input id="pw2" asp-for="@Model.Password" type="password" class="form-control" placeholder="Password..."
    style="border-radius: 10px;" required>
        <div class="invalid-feedback">Password is required.</div>
      </div>

      @if (@Model.ErrorMessage != null)
      {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px;">
          <strong>Error:</strong> @Model.ErrorMessage
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <i class="fas fa-times"></i>
          </button>
        </div>
      }

      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
      </div>

      <a href="/Profile">
          <i class="fa fa-arrow-left mr-1"></i>Back to Profile
      </a>

    </form>
  </div>
</div>

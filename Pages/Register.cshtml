@page
@model Bloggie.Pages.RegisterModel
@{
    Layout = "_MainLayout";
}
<!DOCTYPE html>
<html>
<head>
	<title>Đăng ký</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="container">
	<div class="col-sm-10" style="width: 600px;margin-left: 250px;margin-top: 50px;">
		<div class="jumbotron">
			<div class="form-group" style="margin-top: -50px">
				<h1 style="margin-left: 165px;">
					Đăng ký
				</h1>
			</div>

			<hr>

			<form method="post" class="form-horizontal" style="margin-left: 50px;">
				<div class="form-group input-group">
					<span class="input-group-prepend">
						<span class="input-group-img"><img src="./icon/email.png"></span>
					</span>
					<input asp-for="Email" class="form-control" id="email" placeholder="Nhập tài khoản Email..." style="border-radius: 20px;">
				</div>

				<div class="form-group input-group">
					<span class="input-group-prepend">
						<span class="input-group-img"><img src="./icon/user.png"></span>
					</span>
					<input asp-for="FullName" class="form-control" id="username" placeholder="Nhập họ tên..." style="border-radius: 20px;">
				</div>

				<div class="form-group input-group">
					<span class="input-group-addon">
						<span class="input-group-img"><img src="./icon/pass.png"></span>
					</span>
					<input asp-for="Password" type="password" class="form-control" id = "password" placeholder="Nhập mật khẩu..." style="border-radius: 20px;">
				</div>

				<div class="form-group">
					<button class="btn btn-primary" style="width: 200px; margin-left: 120px; border-radius: 16px;">Đăng nhập</button>
				</div>

				<div class="text-success">
					@Model.Message
				</div>

				<div class="form-group">
					<a href="#" style="margin-left: 320px;">Quên mật khẩu</a>
				</div>

                  <div class="form-group">
                    Đã có tài khoản?
					<a asp-page="/Login">Đăng nhập</a>
				</div>

			</form>

		</div>
	</div>
</div>


<script src="./bootstrap-validate.js" ></script>

<script>
	bootstrapValidate(
   '#username',
   'required:Tên tài khoản không được để trống!'
   bootstrapValidate(
   '#email',
   'email:Nhập tài khoản email không được để trống!'
   bootstrapValidate(
   '#password',
   'required:Mật khẩu không được để trống!'
);
</script>

<!-- JS, Popper.js, and jQuery -->
	
</body>
</html>
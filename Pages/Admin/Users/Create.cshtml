@page
@model Bloggie.Pages.Admin.CreateUserModel

@{
  Layout = "_AdminLayout";
}

@section Scripts {
  <script src="~/js/Validation.js"></script>
}

<div class="container">
  <div class="display-4">
    Create Account
  </div>

  <hr class="my-4">

  <form method="post" class="needs-validation" novalidate>
    <div class="form-group">
      <label>Email:</label>

      <input asp-for="@Model.User.Email" class="form-control" required>

      <div class="invalid-feedback">Please provide a valid email address.</div>
    </div>

    <div class="form-group">
      <label>Name</label>

      <input asp-for="@Model.User.FullName" class="form-control"
      required>

      <div class="invalid-feedback">Please provide a name.</div>
    </div>

    <div class="form-group">
      <label>Password</label>

      <input asp-for="@Model.User.Password" class="form-control" required>

      <div class="invalid-feedback">Please provide a password.</div>
    </div>

    <div class="form-group">
      <label>Role</label>

      <select asp-for="@Model.User.Role" class="selectpicker show-tick d-block" data-style="custom-select">
        @foreach (Bloggie.Models.UserRole role in Enum.GetValues(typeof(Bloggie.Models.UserRole))) {
          if (role == Models.UserRole.Admin)
            continue;

          <option asp-value="role">@role</option>
        }
      </select>
    </div>

    @if (@Model.ErrorMessage != null) {
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @Model.ErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
    }

    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Create account
      </button>
    </div>

    <a href="/Admin/Users">
      <i class="fas fa-angle-left mr-1"></i>Back to Users
    </a>
  </form>
</div>
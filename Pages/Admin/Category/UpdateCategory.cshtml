@page
@model Bloggie.Pages.UpdateCategoryModel
@{
  Layout = "_AdminLayout";
}
<table>
  <tr>
    <td>
      <div class="text-danger">
        @Model.ErrorMessage
      </div>
    </td>
  </tr>
  <tr>
    <td>Current Name: @Model.category.Name</td>
  </tr>
  <tr>
    <td>
      <form action="" method="post">
        <input asp-for="@Model.category.Id" hidden>
        Input name <input type="text" asp-for="@Model.newName" required>
        <input type="submit" value="Submit">
      </form>
    </td>
  </tr>
</table>

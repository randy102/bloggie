@page
@model Bloggie.Pages.Admin.ListUserModel
<head>
   <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
   <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
</head>
<table class="table">
   <tr>
      <th>Email</th>
      <th>FullName</th>
      <th>Role</th>
      <th>Name of Role</th>
      <th>Active</th>
      <th>Status</th>
   </tr>
   @foreach (var user in @Model.Users)
   {
   <tr>
      <th>@user.Email</th>
      <th>@user.FullName</th>
      <th>

            <form asp-page-handler="ChangeRole" method="post">
               <input type="hidden" name="idChangeRole" value="@user.Id" >
               <input type="submit" value="Change Role">
            </form> 
             
      </th>
      <th>@user.Role</th>
      <th>

            <form asp-page-handler="ChangeActive" method="post">
               <input type="hidden" name="idChangeActive" value="@user.Id" >
               <input type="submit" value="Change Active">
            </form> 
             
      </th>
      <th>@user.Active</th>
   </tr>
   }
</table>
@page
@model Bloggie.Pages.Admin.CreateUserModel


@{
    Layout = "_AdminLayout";
}


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<h1>Create Account</h1>
@Model.statusMsg
<form action="" method="post">
    @* Các thông tin bắt buộc phải có *@
    <label asp-for="@Model.User.Email"></label>
    <input asp-for="@Model.User.Email" required>
    <label asp-for="@Model.User.FullName"></label>
    <input asp-for="@Model.User.FullName" required>

    <label asp-for="@Model.User.Password"></label>
    <input asp-for="@Model.User.Password" required>
    <label for="cars">Choose a Role:</label>

    <select asp-for="@Model.User.Role">
        @{
            foreach(Bloggie.Models.UserRole role in Enum.GetValues(typeof(Bloggie.Models.UserRole))){
                if(role==Models.UserRole.Admin){
                    continue;
                }
                <option asp-value="role">@role</option>
            }

        }
    </select>
    <input type="submit" value="submit">
</form>

@page
@model Bloggie.Pages.Admin.CreateUserModel

@{
    Layout = "_AdminLayout";
}
<div class="text-danger">
    @Model.statusMsg
</div> 
<div class="container">
    <h2>Create Account</h2>
    <form method="post" class="needs-validation" novalidate>
        @* Các thông tin bắt buộc phải có *@
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="@Model.User.Email" class="form-control" style="border-radius: 10px;" placeholder="Email..."
            required>
            <div class="invalid-feedback">Enter the correct email format! Do not leave blank!</div>
        </div>

        <div class="form-group">
            <label>Name:</label>
            <input asp-for="@Model.User.FullName" class="form-control" style="border-radius: 10px;"
placeholder="Fullname..." required>
            <div class="invalid-feedback">Full name cannot be left blank!</div>
        </div>

        <div class="form-group">
            <label>Password:</label>
            <input asp-for="@Model.User.Password" class="form-control" style="border-radius: 10px;"
placeholder="Password..." required>
            <div class="invalid-feedback">Password can not be blank!</div>
        </div>

        <div class="form-group">
            <label for="cars">Choose a Role:</label>
            <select asp-for="@Model.User.Role"
style="width: 150px; height: 35px; border-color:	#C0C0C0; outline: none; border-radius: 10px;">
                @{
                    foreach (Bloggie.Models.UserRole role in Enum.GetValues(typeof(Bloggie.Models.UserRole)))
                    {
                        if (role == Models.UserRole.Admin)
                        {
                            continue;
                        }
                        <option asp-value="role">@role</option>
                    }

                }
                </select>
            </div>

            <button type="submit" class="btn btn-primary" style="border-radius: 10px;">Create</button>

            @*<input type="submit" value="submit">*@
        </form>
    </div>

    <script src="~/js/Register.js"></script>

@using Microsoft.AspNetCore.Http

@{
  string pageUrl = Context.Request.Path;

  string sessionFullName = Context.Session.GetString("FullName");
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Bloggie</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/lib/fontawesome-free-5.15.1-web/css/all.css" />
  <link rel="stylesheet" href="~/css/site.css">
  <link rel="stylesheet" href="~/css/button.css">
  <link rel="stylesheet" href="~/css/datatable.css">
  <link rel="stylesheet" href="~/css/toggle-switch.css">
  @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">

  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
    <div class="container">
      <a class="navbar-brand" href="/Index">Bloggie</a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bloggie-navbar"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="bloggie-navbar" class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link text-dark" href="/Index">Home</a>
          </li>
        </ul>

        <form class="form-inline">
          @if (!User.Identity.IsAuthenticated)
          {
            <a class="btn btn-primary mr-2" href="/Login">Login</a>
            <a class="btn btn-outline-primary" href="/Register">Register</a>
          }
          else
          {
            <div class="dropdown">
              <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                @(sessionFullName ?? Context.User.Identity.Name)
              </a>
              <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item @(pageUrl == "/Profile" ? "active" : "")" href="/Profile">
                  <i class="fa fa-user fa-fw mr-2"></i> Profile
                </a>

                @if (User.IsInRole("Admin")) {
                  <a class="dropdown-item @(pageUrl == "/Admin/Users/" ? "active" : "")" href="/Admin/Users/Index">
                    <i class="fa fa-cog fa-fw mr-2"></i> Admin
                  </a>
                } else if (User.IsInRole("Moderator")) {
                  <a class="dropdown-item @(pageUrl == "" ? "active" : "")">
                    <i class="fa fa-cog fa-fw mr-2"></i> Approve posts
                  </a>
                }

                <a class="dropdown-item" href="/Logout">
                  <i class="fa fa-sign-out-alt fa-fw mr-2"></i> Logout
                </a>
              </div>
            </div>
          }
        </form>
      </div>
    </div>
  </nav>

  <main role="main" class="container d-flex flex-column flex-grow-1 overflow-auto py-3">
    @RenderBody()
  </main>

  <footer class="container-fluid flex-grow-0 flex-shrink-1 border-top text-muted box-shadow bg-white py-3">
    <div class="container">
      &copy; 2020 - Bloggie - <a href="/Privacy">Privacy</a>
    </div>
  </footer>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/fontawesome-free-5.15.1-web/js/all.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  @RenderSection("Scripts", required: false)
</body>

</html>

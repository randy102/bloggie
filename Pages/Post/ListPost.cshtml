@page
@model Bloggie.Pages.ListPostModel
@{
}

<table class="table">
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Author</th>
    <th>CreatedAt</th>
  </tr>

  @foreach (var post in Model.Posts)
  {
    <tr>
      <td>@post.Title</td>
      <td>@post.Category.Name</td>
      <td>@post.Author.FullName</td>
      <td>@post.CreatedAt.ToShortDateString()</td>
    </tr>
  }
</table>